{% extends 'base.html.twig' %}

{% block title %}Paramètres du compte{% endblock %}

{% block body %}
    <div class="settings-wrapper">
        <div class="settings-card">
            <div class="settings-header">
                <h1>Paramètres du compte</h1>
                <p>Modifiez vos informations personnelles et votre sécurité.</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'settings-form'}}) }}

            <div class="form-section">
                <div class="form-group">
                    {{ form_label(form.username) }}
                    {{ form_widget(form.username) }}
                    {{ form_errors(form.username) }}
                </div>
            </div>

            <hr class="form-divider">

            <div class="form-section">
                <div class="form-group">
                    {{ form_label(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>

            <div class="form-footer">
                <button type="submit" class="btn-save">Mettre à jour mon profil</button>
                <a href="{{ path('app_profile') }}" class="btn-cancel">Annuler</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .settings-wrapper {
            display: flex;
            justify-content: center;
            padding: 40px 20px;
        }

        .settings-card {
            background: #fff;
            max-width: 600px;
            width: 100%;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .settings-header {
            margin-bottom: 30px;
            text-align: center;
        }

        .settings-header h1 {
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        .settings-header p {
            color: #777;
        }

        .form-section h3 {
            font-size: 1.1rem;
            margin-bottom: 20px;
            color: #e63946;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-divider {
            border: 0;
            border-top: 1px solid #eee;
            margin: 30px 0;
        }

        .settings-form .form-group {
            margin-bottom: 20px;
        }

        .settings-form label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .settings-form input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
        }

        .settings-form input:focus {
            border-color: #e63946;
            outline: none;
            box-shadow: 0 0 0 3px rgba(230, 57, 70, 0.1);
        }

        .form-footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            margin-top: 30px;
        }

        .btn-save {
            background: #1a1a1a;
            color: white;
            border: none;
            padding: 14px 40px;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            transition: background 0.3s;
        }

        .btn-save:hover {
            background: #333;
        }

        .btn-cancel {
            color: #888;
            text-decoration: none;
            font-size: 0.9rem;
        }

        .btn-cancel:hover {
            text-decoration: underline;
        }

        .form-group ul {
            margin-top: 5px;
            color: #e63946;
            font-size: 0.85rem;
            list-style: none;
            padding: 0;
        }
    </style>
{% endblock %}
