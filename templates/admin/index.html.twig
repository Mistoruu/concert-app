{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header">
            <h1>Tableau de Bord Admin</h1>
            <p>Vue d'ensemble de la plateforme</p>
        </div>

        <div class="admin-nav">
            <a href="{{ path('app_admin_users') }}" class="btn-outline"> Gérer les Utilisateurs</a>
            <a href="{{ path('app_admin_artists') }}" class="btn-outline"> Gérer les Artistes</a>
            <a href="{{ path('app_admin_concerts') }}" class="btn-outline"> Gérer les Concerts</a>
        </div>

        {# Cartes Stats #}
        <div class="stats-grid">
            <div class="stat-card">
                <h3>{{ users_count }}</h3>
                <p>Utilisateurs</p>
            </div>
            <div class="stat-card">
                <h3>{{ artists_count }}</h3>
                <p>Artistes</p>
            </div>
            <div class="stat-card">
                <h3>{{ concerts_count }}</h3>
                <p>Concerts</p>
            </div>
        </div>

        {# Derniers inscrits #}
        <div class="manage-container" style="margin-top: 2rem;">
            <h3>Derniers inscrits</h3>
            <table class="manage-table">
                <thead>
                <tr>
                    <th>Utilisateur</th>
                    <th>Email</th>
                    <th>Rôle</th>
                </tr>
                </thead>
                <tbody>
                {% for user in latest_users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="admin-tag">Admin</span>
                            {% else %}
                                User
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <style>
        .admin-nav {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 2rem;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: #1a1a1a;
            color: white;
            padding: 2rem;
            border-radius: 8px;
            text-align: center;
        }
        .stat-card h3 {
            font-size: 2.5rem;
            color: #e63946;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}
