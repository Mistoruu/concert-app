{% extends 'base.html.twig' %}

{% block title %}Connexion - LiveConcert{% endblock %}

{% block body %}
    <div class="auth-wrapper">
        <div class="auth-card">
            <form method="post">
                {% if error %}
                    <div class="flash flash-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="auth-info">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% endif %}

                <h1>Connexion</h1>

                <div class="form-group">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn-auth" type="submit">Se connecter</button>

                <div class="auth-footer">
                    Pas encore de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous</a>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
